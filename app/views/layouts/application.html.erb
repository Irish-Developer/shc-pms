<!DOCTYPE html>
<html>
  <head>
    <title>Ireland SHC-PMS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %> <!-- prevents cross-site request forgery (CSRF) -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      
      <% flash.each do |message_type, message| %> <!--display the welcome message on the first page after the redirect-->
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    
    <%= yield %> <!-- responsible for inserting the contents of each page into the layout-->
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
