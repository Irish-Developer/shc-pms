<% provide(:title, "Login") %> <!-- login page -->
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %> <!-- Login session -->

      <%= f.label :email %><!-- email address text feild -->
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %><!-- password text field -->
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Login", class: "btn btn-primary" %> <!-- submit button -->
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p> <!-- Link to signup page -->
  </div>
</div>
